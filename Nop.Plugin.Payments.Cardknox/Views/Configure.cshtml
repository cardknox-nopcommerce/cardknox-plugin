@{
	Layout = "_ConfigurePlugin";
}

@model ConfigurationModel
@using Nop.Plugin.Payments.Cardknox.Models;

@await Component.InvokeAsync("StoreScopeConfiguration")

<form asp-controller="PaymentCardknox" asp-action="Configure" method="post">
	<div class="panel-group">
		<div class="panel panel-default">
			<div class="panel-body">
				<p>
					<b>Cardknox nopCommerce plugin settings</b>
				</p>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="TransactionKey_OverrideForStore" asp-input="TransactionKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="TransactionKey" />
					</div>
					<div class="col-md-9">
						<nop-editor asp-for="TransactionKey" />
						<span asp-validation-for="TransactionKey"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="SoftwareName_OverrideForStore" asp-input="SoftwareName" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="SoftwareName" />
					</div>
					<div class="col-md-9">
						<nop-editor asp-for="SoftwareName" />
						<span asp-validation-for="SoftwareName"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="SoftwareVersion_OverrideForStore" asp-input="SoftwareVersion" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="SoftwareVersion" />
					</div>
					<div class="col-md-9">
						<nop-editor asp-for="SoftwareVersion" />
						<span asp-validation-for="SoftwareVersion"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="UseCustomSoftwareApiVersion_OverrideForStore" asp-input="UseCustomSoftwareApiVersion" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="UseCustomSoftwareApiVersion" />
					</div>
					<div class="col-md-9">
						<nop-editor asp-for="UseCustomSoftwareApiVersion" />
						<span asp-validation-for="UseCustomSoftwareApiVersion"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="SoftwareApiVersion_OverrideForStore" asp-input="SoftwareApiVersion" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="SoftwareApiVersion" />
					</div>
					<div class="col-md-9">
						<nop-editor asp-for="SoftwareApiVersion" />
						<span asp-validation-for="SoftwareApiVersion"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="UseShippingAddressAsBilling_OverrideForStore" asp-input="UseShippingAddressAsBilling" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="UseShippingAddressAsBilling" />
					</div>
					<div class="col-md-9">
						<nop-editor asp-for="UseShippingAddressAsBilling" />
						<span asp-validation-for="UseShippingAddressAsBilling"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="TransactModeId_OverrideForStore" asp-input="TransactModeId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="TransactModeId" />
					</div>
					<div class="col-md-9">
						<nop-select asp-for="TransactModeId" asp-items="Model.TransactModeValues" />
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="AdditionalFee_OverrideForStore" asp-input="AdditionalFee" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="AdditionalFee" />
					</div>
					<div class="col-md-9">
						<nop-editor asp-for="AdditionalFee" />
						<span asp-validation-for="AdditionalFee"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						<nop-override-store-checkbox asp-for="AdditionalFeePercentage_OverrideForStore" asp-input="AdditionalFeePercentage" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
						<nop-label asp-for="AdditionalFeePercentage" />
					</div>
					<div class="col-md-9">
						<nop-editor asp-for="AdditionalFeePercentage" />
						<span asp-validation-for="AdditionalFeePercentage"></span>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-3">
						&nbsp;
					</div>
					<div class="col-md-9">
						<input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
